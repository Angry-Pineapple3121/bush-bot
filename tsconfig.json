{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esNext",
		"outDir": "dist",
		"lib": ["ESNext", "ESNext.Array", "ESNext.AsyncIterable", "ESNext.Intl", "ESNext.Symbol", "DOM"],
		"sourceMap": false,
		"inlineSourceMap": true,
		"inlineSources": true,
		"incremental": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": "./",
		"paths": {
			"src/*": ["./src/*"],
			"@lib": ["./src/lib"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
